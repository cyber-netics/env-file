
{
    "compilerOptions": {
      "module": "commonjs",
      "target": "ES2017",
      "outDir": "./dist/",
      "rootDir": "./src",
      "baseUrl": "./",
      "importHelpers": true,
      "declaration": true,
      "sourceMap": true,
      "strict": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "noImplicitReturns": true,
      "noFallthroughCasesInSwitch": true
    },
    "compileOnSave": true,
    "include": [
      "src"
    ]
  }